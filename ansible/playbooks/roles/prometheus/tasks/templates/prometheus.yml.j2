global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['test-server:9100', 'prod-server:9100']  # Your servers
        labels:
          env: 'production'

  - job_name: 'banking-app'
    metrics_path: '/actuator/prometheus'
    static_configs:
      - targets: ['test-server:8080', 'prod-server:8080']  # Your app servers
        labels:
          env: 'production'
